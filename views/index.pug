extends layout

block content
    h2 Upload an image file
    form(name="Upload", action="#" enctype="multipart/form-data" method="post")
        p Filename:
        input(type="file" name="submitfile" id="submitfile", accept="image/*")

    div
        center
            strong
                b Original
        canvas(id="original", width=1000, height=500)

    div
        center
            strong
                b New
        canvas(id="new", width=1000, height=500)

block scripts
    script(type="text/javascript", src="/scripts/color.js")
    script(type="text/javascript", src="/scripts/markov_fixed.js")
    script(type="text/javascript", src="/scripts/markov.js")
    script(type="text/javascript", src="/scripts/index.js")
